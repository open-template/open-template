{
  "name": "@opentemplate/scl-lib-adapter-way",
  "version": "0.0.1-rc.1",
  "description": "Adapter way npm package starter Test",
  "readmeFilename": "README.md",
  "author": {
    "name": "Samir Romdhani",
    "email": "samir.romdhani1994@gmail.com"
  },
  "private": false,
  "license": "MIT",
  "main": "dist/scl/scl.model.js",
  "files": [
    "dist/**/*",
    "src/scl/*",
    "*.md"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "tsc -w",
    "start:dev:nest": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prerelease": "grunt prerelease",
    "patch": "grunt patch",
    "minor": "grunt minor",
    "major": "grunt major",
    "bump-patch": "grunt bump-patch",
    "bump-minor": "grunt bump-minor",
    "bump-major": "grunt bump-major"
  },
  "keywords": [
    "IEC61850"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/open-template/open-template"
  },
  "bugs": "https://github.com/open-template/open-template",
  "peerDependencies": {
    "@nestjs/common": "^8.1.1",
    "@opentemplate/scl-lib": "^0.2.5"
  },
  "devDependencies": {
    "@nestjs/common": "^8.1.1",
    "@nestjs/core": "^8.1.1",
    "@nestjs/platform-express": "^8.1.1",
    "@nestjs/testing": "8.1.1",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/node": "^14.18.10",
    "@types/supertest": "2.0.7",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "grunt-bump": "0.8.0",
    "@opentempl/jsonix": "^3.0.0-next.0",
    "rxjs": "^7.2.0",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
